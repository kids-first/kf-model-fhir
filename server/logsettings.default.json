{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Vonk.Server": "Information",
        "Vonk.Core.Pluggability": "Information",
        "Vonk.Core.Licensing": "Information",
        "Vonk.Administration.Api.Import": "Information",
        //"Vonk.Repository.MongoDb": "Verbose", //Enable this to see MongoDB statements in the log and MongoDB dependency times in Azure Application Insights.
        //"Vonk.Repository.Sql": "Verbose", //Enable this to see SQL statement in the log.
        "Vonk": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [ReqId: {RequestId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "%temp%/vonk-{Date}.log",
          "fileSizeLimitBytes": "",
          "retainedFileCountLimit": "7",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Application}] [{Level}] [Machine: {MachineName}] [ReqId: {RequestId}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
      ,
      {
        "Name": "ApplicationInsightsTraces",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "instrumentationKey": "your-instrumentationkey"
        }
      }
      //,
      //{
      //  "Name": "Seq",
      //  "Args": {
      //    "serverUrl": "http://localhost:5341",
      //    "restrictedToMinimumLevel": "Information"
      //  }
      //}
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Vonk",
      "Environment": "Default"
    }
  }
}